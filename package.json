{
  "name": "carouzel",
  "version": "0.0.2",
  "description": "Carouzel is a framework free light-weight carousel plugin, which is responsive, handles multiple configurations. It uses DOM hardware acceleration for animation effects.",
  "private": false,
  "scripts": {
    "generatedata": "node ./scripts/generatedata.js && node ./scripts/generatedata-2.js",
    "compile:sass": "node-sass --source-map true src/carouzel/ -o dist/styles/carouzel",
    "compile:ts": "tsc",
    "compile:tswatch": "tsc-watch --onFailure \"echo Beep! Compilation Failed\"",
    "uglify:js": "uglifyjs dist/scripts/carouzel.js -o dist/scripts/carouzel.min.js -c -m",
    "uglify:css": "uglifycss dist/styles/carouzel/carouzel.css --output dist/styles/carouzel/carouzel.min.css",
    "only:js": "npm run compile:ts && npm run uglify:js",
    "only:css": "npm run compile:sass && npm run uglify:css",
    "build:dev": "npm run compile:ts && npm run compile:sass",
    "build:prod": "npm run build:dev && npm run uglify:js && npm run uglify:css && npm run compile:sitesass",
    "compile:sitesass": "node-sass src/sass-site/ -o dist/styles/site && uglifycss dist/styles/site/index.css --output dist/styles/site/index.min.css",
    "test": "karma start karma.conf.js"
  },
  "main": "dist/scripts/carouzel.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adityakahb/carouzel.git"
  },
  "keywords": [
    "carousel",
    "slider",
    "scroll",
    "fade",
    "hardware",
    "accelerated",
    "acceleration",
    "responsive",
    "touch",
    "swipe",
    "easing",
    "plugin",
    "vanilla",
    "native",
    "typescript",
    "javascript",
    "css3",
    "es6",
    "es3"
  ],
  "author": "https://github.com/adityakahb",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adityakahb/carouzel/issues"
  },
  "homepage": "https://adityakahb.github.io/carouzel",
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "bootstrap": "^5.1.3",
    "istanbul": "^0.4.5",
    "jasmine-core": "^3.10.1",
    "karma": "^6.3.9",
    "karma-babel-preprocessor": "^8.0.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.1.0",
    "karma-firefox-launcher": "^2.1.2",
    "karma-ie-launcher": "^1.0.0",
    "karma-jasmine": "^4.0.1",
    "karma-jasmine-html-reporter": "^1.7.0",
    "karma-spec-reporter": "^0.0.32",
    "karma-viewport": "^1.0.8",
    "node-sass": "^7.0.1",
    "tsc-watch": "^4.6.0",
    "typescript": "^4.5.4",
    "uglify-js": "^3.14.5",
    "uglifycss": "^0.0.29"
  }
}